{
  "name": "@digita-ai/nde-erfgoed-components",
  "version": "0.1.0",
  "description": "Collection of Semantic Components for the NDE-project.",
  "author": "Wouter Janssens <wouter@digita.ai>",
  "main": "./dist/nde-erfgoed-components.umd.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/nde-erfgoed-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/nde-erfgoed-components.es.js",
      "require": "./dist/nde-erfgoed-components.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run start:watch",
    "start:watch": "vite --config vite.serve.config.ts",
    "build": "rimraf ./dist && vite build --config vite.build.config.ts && tsc",
    "build:dev": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --passWithNoTests",
    "test:ci": "npm run test -- --runInBand"
  },
  "dependencies": {
    "@digita-ai/nde-erfgoed-core": "0.1.0",
    "@digita-ai/nde-erfgoed-theme": "0.1.0",
    "@digita-ai/semcom-core": "0.3.4",
    "lit-element": "2.4.0",
    "rx-lit": "1.0.1",
    "rxjs": "^6.6.7",
    "xstate": "^4.17.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "esbuild": "^0.11.6",
    "eslint": "^7.16.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "^4.1.3",
    "vite": "2.2.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/nde-erfgoedinstellingen.git",
    "directory": "packages/nde-erfgoed-components"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/nde-erfgoedinstellingen/issues"
  }
}

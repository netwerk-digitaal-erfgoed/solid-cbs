{
  "name": "@digita-ai/nde-erfgoed-components",
  "version": "0.0.1",
  "description": "Collection of Semantic Components for the NDE-project.",
  "author": "Wouter Janssens <wouter@digita.ai>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:old:watch": "rm -rf ./dist && esbuild lib/demo.ts lib/styles.css --servedir=./ --outdir=dist/bundles --bundle",
    "start:watch": "snowpack dev",
    "build": "rm -rf ./dist && snowpack build && tsc",
    "build:dev": "rm -rf ./dist && snowpack build && tsc",
    "build:old": "rm -rf ./dist && tsc && esbuild lib/index.ts lib/styles.css lib/collections/collection.component.ts lib/collections/collections.component.ts --bundle --outdir=dist/bundles --minify",
    "build:old:dev": "rm -rf ./dist && tsc && esbuild lib/index.ts lib/styles.css lib/collections/collection.component.ts lib/collections/collections.component.ts --bundle --outdir=dist/bundles",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --passWithNoTests",
    "test:ci": "npm run test -- --runInBand"
  },
  "dependencies": {
    "@digita-ai/nde-erfgoed-core": "0.0.1",
    "@digita-ai/nde-erfgoed-theme": "0.0.1",
    "@digita-ai/semcom-core": "0.3.4",
    "lit-element": "2.4.0",
    "rxjs": "^6.6.7",
    "rx-lit": "1.0.1",
    "xstate": "^4.17.1"
  },
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "snowpack": "3.3.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/nde-erfgoedinstellingen.git",
    "directory": "packages/nde-erfgoed-components"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/nde-erfgoedinstellingen/issues"
  }
}

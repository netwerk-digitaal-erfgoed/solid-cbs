  "author": "Wouter Janssens <wouter@digita.ai>",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:watch": "rm -rf ./dist && esbuild lib/app.ts lib/styles.css --servedir=./ --outdir=dist/bundles --bundle",
    "build": "rm -rf ./dist && tsc && esbuild lib/app.ts lib/styles.css --bundle --outdir=dist/bundles --minify",
    "build:dev": "rm -rf ./dist && tsc && esbuild lib/app.ts lib/styles.css --bundle --outdir=dist/bundles",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --passWithNoTests",
    "test:ci": "npm run test -- --runInBand"
  },
  "dependencies": {
    "@digita-ai/nde-erfgoed-core": "0.0.1",
    "@digita-ai/nde-erfgoed-components": "0.0.1",
    "@digita-ai/nde-erfgoed-theme": "0.0.1",
    "@digita-ai/semcom-core": "0.3.4",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "esbuild": "^0.11.6",
    "eslint": "^7.16.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "^4.1.3"
  },

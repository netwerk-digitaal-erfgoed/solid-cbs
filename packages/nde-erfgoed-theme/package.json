{
  "name": "@digita-ai/nde-erfgoed-theme",
  "version": "0.0.1",
  "description": "Theme for the NDE-project.",
  "author": "Wouter Janssens <wouter@digita.ai>",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc && esbuild lib/index.js --loader:.svg=text --format=esm --bundle --outdir=dist --minify",
    "build:dev": "rm -rf ./dist && tsc && esbuild lib/theme.css --bundle --outdir=dist",
    "lint": "stylelint \"lib/**/*.css\"",
    "lint:fix": "stylelint \"lib/**/*.css\" --fix"
  },
  "devDependencies": {
    "esbuild": "^0.11.6",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/nde-erfgoedinstellingen.git",
    "directory": "packages/nde-erfgoed-theme"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/nde-erfgoedinstellingen/issues"
  }
}

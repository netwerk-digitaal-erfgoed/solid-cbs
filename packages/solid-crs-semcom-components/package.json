{
  "name": "@netwerk-digitaal-erfgoed/solid-crs-semcom-components",
  "version": "0.4.0",
  "description": "Semcom components for the demo environment of the NDE-project.",
  "author": "Wouter Janssens <wouter@digita.ai>",
  "license": "EUPL-1.2",
  "scripts": {
    "start": "http-server -p 3004 --gzip --brotli --proxy 'http://localhost:3004?' dist/",
    "start:watch": "npm run build && npm run start",
    "build": "rimraf ./dist && vite build --config vite-build.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:ci": "jest --silent --runInBand --passWithNoTests",
    "test:watch": "jest --watch --no-coverage"
  },
  "dependencies": {
    "@netwerk-digitaal-erfgoed/solid-crs-client": "0.4.0",
    "@netwerk-digitaal-erfgoed/solid-crs-components": "0.4.0",
    "@netwerk-digitaal-erfgoed/solid-crs-core": "0.4.0",
    "@netwerk-digitaal-erfgoed/solid-crs-theme": "0.4.0",
    "@xstate/inspect": "^0.4.1",
    "edtf": "^3.1.0",
    "lit-element": "2.4.0",
    "rx-lit": "1.0.1",
    "rxjs": "^6.6.7",
    "uuid": "^8.3.2",
    "xstate": "^4.17.1"
  },
  "devDependencies": {
    "@digita-ai/typescript-config": "^0.3.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.44",
    "@types/uuid": "8.3.0",
    "eslint": "^7.16.0",
    "http-server": "^0.12.3",
    "jest": "26.6.3",
    "jest-coverage-thresholds-bumper": "0.0.4",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "3.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vite": "2.2.3"
  },
  "jest": {
    "displayName": "semcom-components",
    "preset": "@digita-ai/jest-config",
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-element|lit-html|rx-lit)/)"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    },
    "automock": false,
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/.*\\.conf(ig)?.ts",
      "<rootDir>/lib/index.ts",
      "<rootDir>/.*\\.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    }
  }
}

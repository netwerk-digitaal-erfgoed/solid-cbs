{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm ci && lerna bootstrap --ignore-prepublish",
    "bootstrap:no-ci": "npm i && lerna bootstrap --no-ci --ignore-prepublish",
    "build": "lerna run build",
    "build:dev": "lerna run build:dev",
    "lint": "lerna run lint --since HEAD --parallel",
    "lint:all": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --since HEAD --parallel",
    "lint:fix:all": "lerna run lint:fix --parallel",
    "lint:staged": "lerna run lint:staged --since HEAD --stream --concurrency 1",
    "postinstall": "husky install",
    "release": "lerna version --exact --conventional-commits -m 'chore: release %s' --force-publish --tag-version-prefix='' --no-granular-pathspec",
    "start": "npm run build -- --ignore @digita-ai/nde-erfgoed-manage && lerna run start --parallel",
    "start:watch": "npm run build -- --ignore @digita-ai/nde-erfgoed-manage && lerna run start:watch --parallel",
    "test": "lerna run test --parallel",
    "test:ci": "lerna run test:ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@digita-ai/commitlint-config": "^0.2.2",
    "@digita-ai/eslint-config": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "eslint": "^7.16.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^5.0.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "typescript": "3.8.3"
  },
  "commitlint": {
    "extends": [
      "@digita-ai/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@digita-ai/eslint-config"
    ]
  },
  "lint-staged": {
    "**/*.(js|ts)": [
      "eslint --fix"
    ],
    "**/*.(css)": [
      "stylelint --fix"
    ]
  }
}
